<Window x:Class="TicTacToeUIGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToeUIGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,-79,-65">
        <Label Content="Tic Tac Toe " HorizontalAlignment="Left" Margin="5,1,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="56" Width="131" FontWeight="SemiBold" FontSize="22">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.167"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="Score" HorizontalAlignment="Left" Margin="679,37,0,0" VerticalAlignment="Top" Width="61" FontWeight="SemiBold" FontSize="20" Height="35"/>
        <Label Content="X Player" HorizontalAlignment="Left" Margin="33,67,0,0" VerticalAlignment="Top" Width="71"/>
        <TextBox HorizontalAlignment="Left" Margin="92,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20"/>
        <TextBox HorizontalAlignment="Left" Margin="92,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="O Player" HorizontalAlignment="Left" Margin="33,46,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ResetBtn" Content="_Reset" HorizontalAlignment="Left" Margin="650,301,0,0" VerticalAlignment="Top" Height="43" Width="124" Click="ResetBtn_Click"/>
        <Button x:Name="ExitBtn" Content="_Exit" HorizontalAlignment="Left" Margin="650,357,0,0" VerticalAlignment="Top" Height="39" Width="124" Click="ExitBtn_Click"/>
        <Label x:Name="X" Content="X" HorizontalAlignment="Left" Margin="629,80,0,0" VerticalAlignment="Top"/>
        <Label Content="O" HorizontalAlignment="Left" Margin="701,80,0,0" VerticalAlignment="Top" Width="39"/>
        <TextBox x:Name="ScoreX" HorizontalAlignment="Left" Margin="651,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" Height="23"/>
        <TextBox x:Name="ScoreX_Copy" HorizontalAlignment="Left" Margin="651,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" Height="23"/>
        <TextBox x:Name="ScoreO" HorizontalAlignment="Left" Margin="738,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" Height="23"/>
        <Label Content="Current Player" HorizontalAlignment="Left" Margin="385,29,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="475,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49"/>
        <Grid Margin="33,112,304,71">
            <!-- Define 3 rows and 3 columns -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Cell (0,0) - X -->
            <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Background="LightGray"/>

            <!-- Cell (0,1) - Empty -->
            <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Background="LightGray">
                <TextBlock Text="" FontSize="48" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- Cell (0,2) - O -->
            <Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="1" Background="LightGray"/>

            <!-- Cell (1,0) - Empty -->
            <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Background="LightGray">
                <TextBlock Text="" FontSize="48" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- Cell (1,1) - X -->
            <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Background="LightGray"/>

            <!-- Cell (1,2) - Empty -->
            <Border Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="1" Background="LightGray">
                <TextBlock Text="" FontSize="48" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- Cell (2,0) - Empty -->
            <Border Grid.Row="2" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Background="LightGray">
                <TextBlock Text="" FontSize="48" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <!-- Cell (2,1) - O -->
            <Border Grid.Row="2" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Background="LightGray"/>

            <!-- Cell (2,2) - Empty -->
            <Border Grid.Row="2" Grid.Column="2" BorderBrush="Black" BorderThickness="1" Background="LightGray">
                <TextBlock Text="" FontSize="48" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>
