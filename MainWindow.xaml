<Window x:Class="CalculatorApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="text_1">
        <Label Content="Calculator App" HorizontalAlignment="Left" Margin="328,32,0,0" VerticalAlignment="Top" Width="88"/>
        <TextBox x:Name="textCalculate" HorizontalAlignment="Left" Margin="282,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328" Height="60" TextChanged="textCalculate_TextChanged" IsReadOnly="True"/>
        <Button x:Name="textEqual" Content="_=" HorizontalAlignment="Left" Margin="657,245,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.025,0.102" Width="63" Click="textEqual_Click" AutomationProperties.AccessKey="E"/>
        <Button x:Name="text1" Content="1" HorizontalAlignment="Left" Margin="282,0,0,0" VerticalAlignment="Center" Width="76"  Click="Button_Click"/>
        <Button x:Name="text2" Content="2" HorizontalAlignment="Left" Margin="372,0,0,0" VerticalAlignment="Center" Width="72"  Click="Button_Click"/>
        <Button x:Name="text3" Content="3" HorizontalAlignment="Left" Margin="460,0,0,0" VerticalAlignment="Center" Width="88" Click="Button_Click"/>
        <Button x:Name="textAddition" Content="+" HorizontalAlignment="Left" Margin="559,209,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="88"  Click="Button_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.039"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="textMinus" Content="-" HorizontalAlignment="Left" Margin="657,0,0,0" VerticalAlignment="Center" Width="63"  Click="Button_Click"/>
        <Button x:Name="text4" Content="4" HorizontalAlignment="Left" Margin="282,175,0,0" VerticalAlignment="Top" Width="76"  Click="Button_Click"/>
        <Button x:Name="text5" Content="5" HorizontalAlignment="Left" Margin="372,175,0,0" VerticalAlignment="Top" Width="72"  Click="Button_Click"/>
        <Button x:Name="text7" Content="7" HorizontalAlignment="Left" Margin="282,139,0,0" VerticalAlignment="Top" Width="76"  Click="Button_Click"/>
        <Button x:Name="text6" Content="6" HorizontalAlignment="Left" Margin="464,175,0,0" VerticalAlignment="Top" Width="84"  Click="Button_Click"/>
        <Button x:Name="text8" Content="8" HorizontalAlignment="Left" Margin="372,139,0,0" VerticalAlignment="Top" Width="74"  Click="Button_Click"/>
        <Button x:Name="text9" Content="9" HorizontalAlignment="Left" Margin="468,139,0,0" VerticalAlignment="Top" Width="72" Click="Button_Click"/>
        <Button x:Name="textMutliply" Content="*" HorizontalAlignment="Left" Margin="565,175,0,0" VerticalAlignment="Top" Width="77" Click="Button_Click"/>
        <Button x:Name="textDivision" Content="÷" HorizontalAlignment="Left" Margin="657,175,0,0" VerticalAlignment="Top" Width="63" Click="Button_Click"/>
        <Button x:Name="textDelete" Content="Del" HorizontalAlignment="Left" Margin="565,139,0,0" VerticalAlignment="Top" Width="77" Click="textDelete_Click"/>
        <Button x:Name="textClear" Content="Clear" HorizontalAlignment="Left" Margin="657,139,0,0" VerticalAlignment="Top" Width="63" Click="textClear_Click"/>
        <Button x:Name="text0" Content="0" HorizontalAlignment="Left" Margin="282,245,0,0" VerticalAlignment="Top" Width="76" Click="Button_Click"/>
        <Button x:Name="textDecimal" Content="." HorizontalAlignment="Left" Margin="372,245,0,0" VerticalAlignment="Top" Width="74" Click="Button_Click"/>
        <Button x:Name="textRadical" Content="√" HorizontalAlignment="Left" Margin="468,245,0,0" VerticalAlignment="Top" Width="80" Click="Button_Click"/>
        <Button x:Name="textLog" Content="㏒" HorizontalAlignment="Left" Margin="564,245,0,0" VerticalAlignment="Top" RenderTransformOrigin="9.035,5.814" Width="78" Click="Button_Click"/>

    </Grid>
</Window>
