<Window x:Class="TicTacToeUIGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToeUIGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,-79,-65">
        <Label Content="Tic Tac Toe " HorizontalAlignment="Left" Margin="5,1,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Height="56" Width="131" FontWeight="SemiBold" FontSize="22">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.167"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="Score" HorizontalAlignment="Left" Margin="679,37,0,0" VerticalAlignment="Top" Width="61" FontWeight="SemiBold" FontSize="20" Height="35"/>
        <Label Content="X Player" HorizontalAlignment="Left" Margin="33,67,0,0" VerticalAlignment="Top" Width="71"/>
        <TextBox HorizontalAlignment="Left" Margin="92,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="20"/>
        <TextBox HorizontalAlignment="Left" Margin="92,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="O Player" HorizontalAlignment="Left" Margin="33,46,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ResetBtn" Content="_Reset" ToolTip="This Resets everything" HorizontalAlignment="Left" Margin="650,301,0,0" VerticalAlignment="Top" Height="43" Width="124" Click="ResetBtn_Click"/>
        <Button x:Name="ExitBtn" Content="_Exit" ToolTip="This button is used for the exit out of the program" HorizontalAlignment="Left" Margin="650,357,0,0" VerticalAlignment="Top" Height="39" Width="124" Click="ExitBtn_Click"/>
        <Label x:Name="X" Content="X" HorizontalAlignment="Left" Margin="629,80,0,0" VerticalAlignment="Top"/>
        <Label Content="O" HorizontalAlignment="Left" Margin="701,80,0,0" VerticalAlignment="Top" Width="39"/>
        <TextBox x:Name="ScoreX" HorizontalAlignment="Left" Margin="651,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" Height="23"/>
        <TextBox x:Name="ScoreX_Copy" HorizontalAlignment="Left" Margin="651,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" Height="23"/>
        <TextBox x:Name="ScoreO" HorizontalAlignment="Left" Margin="738,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="36" Height="23"/>
        <Label Content="Current Player" HorizontalAlignment="Left" Margin="385,29,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="475,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="49"/>
        <Grid Margin="33,110,304,73">
            <!-- Define 3 rows and 3 columns -->
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="Button0_0" Grid.Column="0" Grid.Row="0" Content="X"></Button>
            <Button x:Name="Button1_0" Grid.Column="1" Grid.Row="0" Content="O"></Button>
            <Button x:Name="Button2_0" Grid.Column="2" Grid.Row="0"></Button>

            <Button x:Name="Button0_1" Grid.Column="0" Grid.Row="1"></Button>
            <Button x:Name="Button1_1" Grid.Column="1" Grid.Row="1"></Button>
            <Button x:Name="Button2_1" Grid.Column="2" Grid.Row="1"></Button>

            <Button x:Name="Button0_2" Grid.Column="0" Grid.Row="2"></Button> 
            <Button x:Name="Button1_2" Grid.Column="1" Grid.Row="2"></Button>
            <Button x:Name="Button2_2" Grid.Column="2" Grid.Row="2"></Button>
        </Grid>
    </Grid>
</Window>
